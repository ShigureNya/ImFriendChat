 <resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoTitleActionStyle" parent="AppTheme">
        <item name="colorPrimary">@color/main_style_color</item>
        <item name="colorPrimaryDark">@color/main_style_dark_color</item>
        <item name="colorAccent">@color/main_text_hint_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:listDivider">@drawable/chat_item_divider_shape</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
        <!-- 设置activity切换动画 -->
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyTabTextStyle" parent="TextAppearance.Design.Tab">
        <!--Tab字体的大小-->
        <item name="android:textSize">@dimen/main_text_size</item>
        <!--Tab字体是否为大写-->
        <item name="textAllCaps">false</item>
    </style>
    <!--全局Activity切换动画-->
    <style name="activityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>
    <!--机器人-->
    <style name="RebotActivityStyle" parent="NoTitleActionStyle">
        <item name="colorPrimaryDark">@color/rebot_main_style_dark</item>
        <item name="colorAccent">@color/rebot_main_style</item>
    </style>
     <!--菜单按钮字体大小样式-->
     <style name="MenuTextStyle">
         <item name="android:textColor">@android:color/white</item>
         <item name="android:textSize">18sp</item>
     </style>
     <!--FloatingActionButton样式-->
     <style name="FloatingActionBtn" parent="Theme.AppCompat.Light.DarkActionBar">
         <!-- Customize your theme here. -->
         <item name="colorAccent">@color/main_style_color</item>
     </style>

     <!-- toolbar弹出菜单样式 -->
     <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat">
         <item name="android:colorBackground">@color/rippelColor</item>
         <item name="android:textColor">@color/main_text_color</item>
     </style>
</resources>
