<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PersonCenterActivity"
    tools:showIn="@layout/activity_personal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="108dp">
            <TextView
                android:id="@+id/personal_content_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="我的名称"
                android:textColor="@color/main_text_color"
                android:layout_marginLeft="73dp"
                android:singleLine="true"
                android:layout_marginTop="35dp"/>
            <TextView
                android:id="@+id/personal_content_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/personal_content_name"
                android:layout_alignLeft="@id/personal_content_name"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:text="2322323232"
                android:textColor="@color/second_text_color"
                android:singleLine="true"/>
            <ImageView
                android:id="@+id/personal_content_sex"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@id/personal_content_name"
                android:background="#E6E6E6" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:id="@+id/personal_content_user_sign_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的签名"
                android:textColor="@color/main_text_color"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="73dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/personal_content_user_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/personal_content_user_sign_text"
                android:layout_alignLeft="@id/personal_content_user_sign_text"
                android:textSize="12sp"
                android:layout_marginTop="8dp"/>
            <ImageView
                android:id="@+id/personal_content_sign_image"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23dp"
                android:src="@mipmap/user_sign"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@id/personal_content_user_sign_text"
                android:background="#E6E6E6" />
        </RelativeLayout>
        <view.RippleView
            android:id="@+id/personal_content_msg_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/personal_message_drawable">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Message"
                android:textSize="18sp"
                android:textColor="#fff"
                android:gravity="center"
                />
        </view.RippleView>
        <view.RippleView
            android:id="@+id/personal_content_video_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/personal_video_drawable"
            app:rv_color="#c2c2c2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Video"
                android:textSize="18sp"
                android:textColor="#646464"
                android:gravity="center"
                />
        </view.RippleView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView >