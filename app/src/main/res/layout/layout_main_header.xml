<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/main_header_background"
    android:background="@mipmap/new_header_bg">
    <view.CircleImageView
        android:id="@+id/main_header_userimg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:border_color="#0000"
        app:border_width="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="18dp"
        android:src="@mipmap/user_image"
        android:elevation="3dp"
        />
    <TextView
        android:id="@+id/main_header_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:textSize="@dimen/second_text_size"
        android:textColor="@color/main_bg"
        android:layout_alignLeft="@id/main_header_userimg"/>
    <TextView
        android:id="@+id/main_header_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_above="@id/main_header_sign"
        android:textSize="@dimen/main_text_size"
        android:text="My User Name"
        android:textColor="@color/main_bg"
        android:layout_alignLeft="@id/main_header_userimg"/>
    <ImageButton
        android:id="@+id/main_header_edit"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/main_header_userimg"
        android:layout_marginRight="25dp"
        android:layout_marginTop="3dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_border_color_white_24dp"
        android:background="#0000"/>
</RelativeLayout>