<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".RebotChatActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rebot_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            >
            <include layout="@layout/layout_toolbar"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rebot_edit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/chat_edit_layout_shape"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center_vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >
                <ImageButton
                    android:id="@+id/rebot_edit_voice_btn"
                    android:layout_width="15dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/ic_chat_voice"
                    android:background="#0000"
                    />
                <ImageButton
                    android:id="@+id/rebot_edit_function_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/rebot_edit_voice_btn"
                    android:src="@mipmap/ic_chat_add_btn"
                    android:background="#0000"
                    />
                <ImageButton
                    android:id="@+id/rebot_edit_send_btn"
                    android:layout_width="46dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/chat_edit_rebot_btn_shape"
                    android:src="@mipmap/ic_chat_send_btn"/>
                <EditText
                    android:id="@+id/rebot_edit_editText"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/rebot_edit_function_btn"
                    android:layout_toLeftOf="@id/rebot_edit_send_btn"
                    android:background="@drawable/chat_edit_shape"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="10dp"
                    android:padding="3dp"
                    android:textSize="13sp"
                    android:inputType="text"
                    android:textColor="#40c4ff"
                    android:hint="想撩点啥"
                    />
            </RelativeLayout>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rebot_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rebot_toolbar_layout"
            android:layout_above="@id/rebot_edit_layout">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>