<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app ="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    tools:context=".SignActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_input_pwd_hint"
            android:paddingLeft="5dp"/>
        <EditText
            android:id="@+id/sign_input_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"/>
        <LinearLayout
            android:id="@+id/sign_checked_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register_checked_pwd_edit_hint"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"/>
            <EditText
                android:id="@+id/sign_checked_pwd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:inputType="textPassword"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register_input_code_hint"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:weightSum="2"
                >
                <EditText
                    android:id="@+id/sign_input_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:maxLength="4"/>
                <ImageView
                    android:id="@+id/sign_show_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:paddingBottom="7dp"
                    android:scaleType="centerCrop"
                    />
            </LinearLayout>
        </LinearLayout>
        <view.RippleView
            android:id="@+id/sign_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_edit_btn_shape"
            app:rv_type="rectangle"
            android:elevation="2dp"
            >
            <TextView
                android:id="@+id/sign_submit_button_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/register_submit_btn_text"
                android:gravity="center"
                android:textSize="@dimen/main_text_size"/>
        </view.RippleView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/sign_progress_layout"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/progress_hub_shape"
        android:layout_centerInParent="true"
        android:visibility="gone"
        >
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please wait"
            android:layout_below="@id/progress_bar"
            android:layout_marginTop="13dp"
            android:textColor="@color/main_bg"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
</RelativeLayout>