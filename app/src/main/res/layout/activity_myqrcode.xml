<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MyQRCodeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            app:popupTheme="@style/ToolbarPopupTheme"
            app:theme="@style/AppTheme.PopupOverlay"
            android:background="@color/main_style_color"
            android:elevation="3dp">
        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/tool_bar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <view.CircleImageView
                    android:id="@+id/qrcode_user_image"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:src="@drawable/swzy"
                    app:border_color="#0000"
                    />
                <TextView
                    android:id="@+id/qrcode_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/qrcode_user_image"
                    android:layout_alignTop="@id/qrcode_user_image"
                    android:text="死亡之翼"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/main_text_size"/>
                <TextView
                    android:id="@+id/qrcode_user_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/qrcode_user_name"
                    android:layout_below="@id/qrcode_user_name"
                    android:text="我就是力量的化身!"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/second_text_color"
                    android:textSize="@dimen/second_text_size"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/qrcode_user_code"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/qrcode_user_code"
                    android:text="@string/qrcode_hint"
                    android:textSize="@dimen/third_text_size"
                    android:textColor="@color/third_text_color"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>